<UserControl x:Class="WPF.Projet.Views.DetailEleve"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Projet.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label>Nom</Label>
        <TextBox Text="{Binding Nom}"></TextBox>
        <Label>Prénom</Label>
        <TextBox Text="{Binding Prenom}"></TextBox>
        <Label>Date de naissance</Label>
        <TextBox Text="{Binding DateNaissance}"></TextBox>
        <Label>Moyenne</Label>
        <TextBox Text="{Binding Moyenne}"></TextBox>
        <Label>Nombre d'absence</Label>
        <TextBox Text="{Binding NbAbsences}"></TextBox>
    </StackPanel>
</UserControl>
