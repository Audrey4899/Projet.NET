@using ASP.NET.Projet.Models
@model List<EleveViewModel>

<h2>Liste des eleves</h2>

<!-- Rechercher élève -->
<div class="text-right">
    @using (Html.BeginForm("RechercheEleve", "Home", FormMethod.Get))
    {
        @Html.TextBox("name", null, new { @class = "Form-control", @placeholder = "Rechercher un élève" })
        <input type="submit" class="btn btn-success" value="Rechercher" />
    }
</div>

<!-- Liste élèves -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Identité</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eleve in Model)
        {
            <tr>
                <td>@eleve.Identite</td>
                <td><input type="button" class="btn btn-info" value="Detail" onclick="location.href='@Url.Action("DetailEleve", "Home",  new { idEleve = eleve.ID })'" /></td>
            </tr>
        }
    </tbody>
</table>