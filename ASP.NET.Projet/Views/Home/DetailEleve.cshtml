@using ASP.NET.Projet.Models
@model EleveViewModel

<!-- Identité -->
<h1 class="text-center">@Model.Identite</h1>
<br />
<!-- Notes -->
<h4>Notes :</h4>
@if (Model.Notes != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Matière</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model.Notes)
            {
                <tr>
                    <td>@note.Matiere</td>
                    <td>@note.NoteValeur</td>
                    <td><input type="button" class="btn btn-warning" value="Modifier" onclick="location.href='@Url.Action("ModifierNote", "Home",  new { idNote = note.NoteId, idEleve = Model.ID })'" /></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5 class="text-info"> L'eleve n'a pas encore de note.</h5>
}
<input type="button" class="btn btn-info" value="Entrer une note" onclick="location.href='@Url.Action("AjouterNote", "Home",  new { idEleve = Model.ID })'" />
<br />
<br />

<!-- Absences -->
<h4>Absences :</h4>
@if (Model.Absences != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-center">Date</th>
                <th class="text-center">Motif</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var absence in Model.Absences)
            {
                <tr>
                    <td>@absence.DateAbsence.ToString("dd/MM/yyyy")</td>
                    <td>@absence.Motif</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5 class="text-info"> L'eleve n'a pas d'absence.</h5>
}
<input type="button" class="btn btn-info" value="Enregistrer une absence" onclick="location.href='@Url.Action("AjouterAbsence", "Home",  new { idEleve = Model.ID })'" />