@using ASP.NET.Projet.Models
@model List<AbsenceViewModel>

<h3 class="text-center">Dernières absences :</h3>
@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-center">Eleve</th>
                <th class="text-center">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var absence in Model)
            {
            <tr>
                <td>@absence.Eleve.Nom.ToUpper() @absence.Eleve.Prenom</td>
                <td>@absence.Date.ToString("dd/MM/yyyy")</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-info"> Aucune abscence enregistrée.</h4>
}